function realty_get_term($name){
  $vid = taxonomy_vocabulary_machine_name_load($name);
  return $terms = taxonomy_get_tree($vid->vid, 0, NULL, TRUE);
}

/*
 * Creating a search form.
 */
function realty_search_form($form, $form_state){
  $city = realty_get_term('cities');
  foreach($city as $value) {
    $city_option[$value->tid] = $value->name;
  }
  $form['city'] = array(
    '#type'=>'select',
    '#title'=>'City',
    '#options'=> $city_option,
  );
  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Reserve'),
  );
  $form['#theme'][] = 'search_form';
  return $form;
}

/**
 * Implements hook_ctools_plugin_directory().
 */
function realty_ctools_plugin_directory($owner, $plugin_type) {
  if ($owner == 'panels') {
    return "plugins/$plugin_type";
  }

  if ($owner == 'ctools' && $plugin_type == 'content_types') {
    return "plugins/content_types";
  }
}